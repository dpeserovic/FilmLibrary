@using Microsoft.AspNetCore.Identity
@using FilmLibrary.Model
@inject SignInManager<AppUser> SignInManager
@model FilmLibrary.Model.Film
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1 class="display-4">Details</h1>
</div>

@if (Model != null)
{
    <div class="text-center" style="margin-top: 20px; margin-bottom: 10px;">
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Html.DisplayFor(model => model.ID)</dd>
            <dt>Name</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
            <dt>Director</dt>
            <dd>@Html.DisplayFor(model => model.Director)</dd>
            <dt>Release date</dt>
            <dd>@Html.DisplayFor(model => model.ReleaseDate)</dd>
            <dt>Star</dt>
            <dd>@Html.DisplayFor(model => model.Star)</dd>
            <dt>Rating</dt>
            <dd>@Model.Rating.Rate</dd>
            <dt>Genre</dt>
            <dd>@Model.Genre.Type</dd>
            <div>
                <a asp-action="Index" asp-route-id="" class="btn btn-secondary">Back</a>
            </div>
        </dl>
    </div>
}
else
{
<div class="text-center">
    <h2 class="display-4">Invalid film</h2>
    <a asp-action="Index" asp-route-id="" class="btn btn-secondary">Back</a>
</div>
}